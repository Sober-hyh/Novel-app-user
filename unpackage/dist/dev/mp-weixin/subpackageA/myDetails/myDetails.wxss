.my-content-bg {
  width: 100%;
  height: 250px;
  background-image: linear-gradient(120deg, #cab1d9 0%, #5da68b 100%);
}
.btn1 {
  width: 160rpx;
  background-color: white;
  border-radius: 50rpx;
  height: 30px;
  line-height: 30px;
  font-size: 24rpx;
  color: #e67238;
  float: right;
}
.my-name-text,
.my-gq-text,
.my-read-time {
  color: white;
  padding-left: 30rpx;
}
.my-gq-text,
.my-read-time {
  font-size: 0.8rem;
  letter-spacing: 1.5px;
  color: #cedde6;
}
.my-name-text {
  letter-spacing: 1px;
  font-size: 1.2rem;
  font-weight: bold;
  padding-top: 30rpx;
}
.my-gq-text {
  letter-spacing: 1.7px;
}
.my-read-time {
  padding-top: 30rpx;
}
.my-book {
  width: 100%;
  min-height: 200px;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  position: absolute;
  bottom: 10px;
  padding: 30rpx 30rpx;
}
.my-book-1 .a1 {
  font-weight: bold;
  font-size: 1rem;
}
.my-book-2 text {
  color: #a7a7a7;
}
.my-book-img-1 ._img {
  border-radius: 20rpx;
  width: 130rpx;
  height: 90px;
}

